/* pages/freeget/index.wxss */
.freeget_top{
  margin: 25rpx;
  width: calc(100% - 50rpx);
}
.freeget_banner{
  width: 100%;
  height: 185rpx;
}
.freeget_text{
  margin: 25rpx 0;
  width: 100%;
  position: relative;
}
.freget_title{
  font-size: 32rpx;
  color: #333333;
  margin-right: 40rpx;
  font-weight: bold;
}
.freeget_oldpri{
  color: #b3b2b2;
  font-size: 28rpx;
  text-decoration:line-through;
}
.freeget_nwpri{
  position: absolute;
  right: 0;
  color: #ff9900;
  font-size: 32rpx;
  font-weight: bold;
}
.freeget_line{
  width: 100%;
  height: 12rpx;
  background: #eeeeee;
}
.freeget_conbox{
  margin: 25rpx;
  margin-bottom: 0;
  width: calc(100% - 50rpx);
}
.frecon_title{
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
  border-left: 15rpx #ff9900 solid;
  padding-left: 25rpx;
}
.freeget_dline{
  margin: 25rpx 0;
  border-top: 1rpx solid #cccccc;
  border-bottom: 1rpx solid #cccccc;
  height: 10rpx;
}
.frecon_detail{
  margin: 25rpx;
  margin-top: -10rpx;
  box-sizing: border-box;
  width: calc(100% - 50rpx);
}
.frecon_dlist{
  font-size: 28rpx;
  color: #666666;
  box-sizing: border-box;
  margin: 30rpx 0;
  overflow: hidden;
}
.frecon_dlist text{
  float: left;
  width: 20%;
  line-height: 30rpx;
  min-height: 1rpx;
  text-align: right;
}
.frecon_dlist text:nth-child(1){
  text-align: left;
  width: 60%;
}
.tel_box{
  margin: 25rpx;
  box-sizing: border-box;
  width: calc(100% - 50rpx);
  line-height: 50rpx;
  font-size: 30rpx;
  color: #999999;
  white-space:nowrap;
}
.icon_phone{
  width: 48rpx;
  height: 48rpx;
  vertical-align: middle;
}
.tel_input{
  display: inline-block;
  vertical-align: bottom;
  margin-left: 20rpx;
}

.get_btn{
  margin: 50rpx 25rpx;
  padding: 0 25rpx;
  box-sizing: border-box;
  width: calc(100% - 50rpx);
}
.gbtn{
  text-align: center;
  background-color: #ff9900;
  color: #ffffff;
  height: 86rpx;
  line-height: 86rpx;
  border-radius: 43rpx;
}
.btn_act{
  background-color: #ffac30!important;
  border-color: #ffac30!important;
  color: #333!important;
}