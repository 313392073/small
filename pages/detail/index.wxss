/* pages/detail/index.wxss */
@import "../../template/headers/headers.wxss";
.top_image{
  width: 100%;
  height: 320rpx;
}
.detail_wrapper{
  margin: 25rpx;
  width: calc(100% - 25rpx);
}

.detail_tab{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.detail_tab text{
  width: 33.33%;
  color: #999999;
  line-height: 3;
  font-size: 28rpx;
  text-align: center;
  border-bottom: 2rpx solid #cccccc;
}

.detail_intro{
  margin: 30rpx;
}

.detail_intro_title{
  margin: 25rpx auto;
}
.intro_title_bold{
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-right: 50rpx;
}
.intro_title_en{
  color: #666666;
  font-size: 28rpx;
}
.detail_line{
  height: 2rpx;
  width: 100%;
  background-color: #cccccc;
  margin-bottom: 10rpx;
}
.study_list{
  box-sizing:border-box;
  margin: 30rpx 0;
  background: #eeeeee;
  padding: 30rpx;
}
.study_list text{
  display: block;
  font-size: 30rpx;
  color: #333333;
  line-height: 2;
}
.course_list{
  margin: 30rpx 0;
}
.course_item_image{
  margin: 30rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.course_item_image image{
  width: 100rpx;
  height: 116rpx;
  margin: 10rpx auto;
  display: block;
}
.course_item_text{
  display: flex;
  justify-content: center;
  align-items: flex-start 
}
.course_item_text text{
  width: 30%;
  font-size: 30rpx;
  display: inline-block;
  line-height: 1.8;
  text-align: center;
  margin:0 auto;
}
.detail_video{
  margin: 30rpx 0;
  width: 100%;
  height: 241rpx;
}
.detail_video_title{
  font-size: 30rpx;
  color: #333333;
}

.detail_video_desc text{
  color: #666666;
  font-size: 24rpx;
  line-height: 2;
}
.detail_video_desc text:nth-child(1){
  margin-right: 40rpx;
}

.course_outline{
  margin: 30rpx;
}
.course_list_box{
  margin: 30rpx 0;
}
.course_title_box{
  height: 100rpx;
  line-height: 100rpx;
  position: relative;
  margin-bottom: 30rpx;
}

button::after{
  border: none;
}
.course_detail_btn{
  position: absolute;
  right: 0;
  top: 15rpx;
  display: inline-block;
  font-size: 26rpx;
  border: 1rpx solid #ff9900;
  color: #ff9900;
  border-radius: 30rpx;
  background-color: #fff;
  padding-left: 50rpx;
  padding-right: 50rpx;
}
.btn_sj{
  width: 48rpx;
  height: 48rpx;
  vertical-align: middle;
  margin-top: -5rpx;
}
.course_detail{
  display: none;
  background-color: #eeeeee;
  width: 100%;
  padding: 25rpx;
  box-sizing: border-box;
}
.showdetail{
  display: block;
}
.course_detail text{
  font-size: 24rpx;
  color: #333333;
  display: block;
  line-height: 2;
}
.course_detail_content{
  margin-left: 36rpx;
}
.course_image{
  display: flex;
  justify-content: center;
  align-items: center;
}
.course_image image{
  margin: 25rpx auto 15rpx;
  width: 48%;
  height: 170rpx;
}
.course_image image:nth-child(1){
  margin-left: 0
}
.course_image image:nth-child(2){
  margin-right: 0
}
.detail_con{
  display: none;
}
.act{
  border-bottom: 2rpx solid #ff9900!important;
  background-color: #ffedd3;
  color: #ff9933!important;
}
.actc{
  display: block;
}